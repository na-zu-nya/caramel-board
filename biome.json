{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": [
      "**",
      "!dist",
      "!node_modules",
      "!.turbo",
      "!apps/client-v1",
      "!apps/client-react-v1",
      "!lib/JoyTagTool",
      "!externals",
      "!.claude",
      "!.vscode",
      "!__tests__",
      "!**/*.gen.ts"
    ],
    "ignoreUnknown": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noUnknownAtRules": "off",
        "noShadowRestrictedNames": "off"
      },
      "correctness": {
        "noNestedComponentDefinitions": "off",
        "noUnusedVariables": "error",
        "useUniqueElementIds": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "a11y": {
        "noLabelWithoutControl": "off",
        "noSvgWithoutTitle": "off",
        "useSemanticElements": "off",
        "noStaticElementInteractions": "off",
        "useKeyWithClickEvents": "off",
        "useButtonType": "off",
        "useAnchorContent": "off",
        "useAriaPropsSupportedByRole": "off",
        "useValidAnchor": "off"
      },
      "complexity": {
        "noStaticOnlyClass": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always",
      "indentStyle": "space",
      "indentWidth": 2
    }
  }
}
