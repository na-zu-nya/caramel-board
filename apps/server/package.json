{
  "name": "@caramelboard/server",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "nodemon dist/entry.node.mjs",
    "start:prod": "node dist/entry.node.mjs",
    "dev": "npm run build && nodemon --watch src --ext ts --exec 'npm run build && node dist/entry.node.mjs'",
    "build": "esbuild src/entry.node.ts --sourcemap --bundle --platform=node --format=esm '--external:@prisma/client' '--external:sharp' '--external:dotenv' '--external:fs-extra' '--external:form-data' '--external:dayjs' '--external:url-join' '--external:axios' --outfile=dist/entry.node.mjs",
    "watch": "npm run build -- --watch",
    "db:pull": "prisma db pull",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate:dev": "npx prisma migrate dev",
    "db:migrate:prod": "npx prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "migrate:assets": "node scripts/migrate-assets.mjs",
    "migrate:users": "node scripts/migrate-single-user-to-users.mjs",
    "migrate:stack-favorites": "node scripts/migrate-stack-favorites.mjs",
    "format": "biome format --write src",
    "lint": "biome check src",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist *.tsbuildinfo node_modules/.cache"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/node": "^22.13.5",
    "dayjs": "^1.10.7",
    "dotenv": "^10.0.0",
    "fs-extra": "^10.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^5.8.3",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.3",
    "@hono/zod-validator": "^0.6.0",
    "@prisma/client": "^6.9.0",
    "axios": "^1.9.0",
    "esbuild": "^0.25.5",
    "form-data": "^4.0.2",
    "hono": "^4.7.10",
    "nodemon": "^3.1.0",
    "prisma": "^6.9.0",
    "sharp": "^0.34.2",
    "url-join": "^5.0.0",
    "zod": "^3.25.34"
  }
}
